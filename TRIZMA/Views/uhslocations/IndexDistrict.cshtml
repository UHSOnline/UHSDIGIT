    <script type="text/javascript">
        var mymap = L.map('mapid21').setView([39.707, -460.54], 4);
        var sw = new L.latLng(5.499550, -167.276413); //Southwest
        var ne = new L.latLng(83.162102, -52.233040);  //Northeast
        var bounds = new L.latLngBounds(sw, ne);
        var greenIcon = new L.Icon({
            iconUrl: '/img/marker/marker-icon-green.png',
            shadowUrl: '/img/marker/marker-shadow.png',
            iconSize: [25, 41],
            iconAnchor: [12, 41],
            popupAnchor: [1, -34],
            shadowSize: [41, 41]
        });
        var redIcon = new L.Icon({
            iconUrl: '/img/marker/marker-icon-red.png',
            shadowUrl: '/img/marker/marker-shadow.png',
            iconSize: [25, 41],
            iconAnchor: [12, 41],
            popupAnchor: [1, -34],
            shadowSize: [41, 41]
        });
        var blueIcon = new L.Icon({
            iconUrl: '/img/marker/marker-icon-blue.png',
            shadowUrl: '/img/marker/marker-shadow.png',
            iconSize: [25, 41],
            iconAnchor: [12, 41],
            popupAnchor: [1, -34],
            shadowSize: [41, 41]
        });
        L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoicnVtdW5rbyIsImEiOiJjamIzcDVsd2gycDhyMnFxa3ZuOGcwcXZqIn0.LivgKgnmM6_E734yDYqzBw', {
            maxZoom: 18,
            id: 'mapbox.streets'
        }).addTo(mymap);
        $(window).load(function (e) {
            e.preventDefault();
            getDistloc();
            //console.log("proba");
            function getDistloc() {
                var markeri = [];
                $.ajax({
                    url: '/uhslocations/getDistrictmap',
                    type: "GET",
                    dataType: "JSON",
                    data: { Int1: @ViewBag.btnSel },
                    success: function (populate) {
                        $.each(populate, function (ID, datatable) {
                            var distid = datatable.ID;
                            var dist = datatable.district;
                            var divID = datatable.divID;
                            var divNm = datatable.divisionName;
                            var regID = datatable.regID;
                            var region = datatable.region;
                            var disPh = datatable.DIPHN;
                            var aclng = datatable.LNG;
                            var aclat = datatable.LAT;
                            var OMD = datatable.OMD;
                            var DOD = datatable.DOD;
                            var DSD = datatable.OMD;
                            
                            if (@ViewBag.btnSel == 3 || @ViewBag.btnSel == 4) {
                                var popsec1 = "<span style='color:darkorange; font-size:12px'>Division:</span><span style='color:steelblue; font-size:12px'> " + divNm + "</span><br><span style='color:darkorange; font-size:12px'> District: </span><span style='color:steelblue; font-size:12px'>" + dist + "</span><br><span style='color:darkorange; font-size:12px'> DOD:</span><span style='color:steelblue; font-size:12px'> " + DOD + "</span><br><span style='color:darkorange; font-size:12px'> OMD:</span><span style='color:steelblue; font-size:12px'> " + OMD + "</a><br><br />";
                            }
                            else
                                if (@ViewBag.btnSel == 5) {
                                    var popsec1 = "<span style='color:darkorange; font-size:12px'>Division:</span><span style='color:steelblue; font-size:12px'> " + divNm + "</span><br><span style='color:darkorange; font-size:12px'> District: </span><span style='color:steelblue; font-size:12px'>" + dist + "</span>";
                                }
                            markeri.push(L.marker([aclat, aclng], { icon: blueIcon, id: distid }).bindPopup(popsec1).openPopup());
                        });              
                        var fgroup = new L.featureGroup(markeri);
                        fgroup.addTo(mymap).bringToFront();
                        mymap.setView([38.284385, -98.60], [5]);                   
                    }
                })
            };
        });
    </script>
    <script type="text/javascript">
        $(".delClick").on('click', function (e) {
            e.preventDefault();
            var id1 = $(this).data("id");
            delDoc(id1);
        });
        function delDoc(id1) {
            $.confirm({
                title: 'Delete!',
                content: 'Continue?',
                buttons: {
                    confirm: function () {
                        delAccount(id1);
                    },
                    cancel: function () {
                        //$.alert('Canceled!');
                    }
                    //,
                    //somethingElse: {
                    //    text: 'Something else',
                    //    btnClass: 'btn-blue',
                    //    keys: ['enter', 'shift'],
                    //    action: function(){
                    //        $.alert('Something else?');
                    //    }
                    //}
                }
            })
        };
        function delAccount(id1) {
            $.ajax({
                url: '/uhslocations/DeleteDistrict',
                type: "GET",
                dataType: "JSON",
                data: { IDD: id1, Int1: @ViewBag.btnSel },
                success: function () {
                    location.reload();
                }
            });
        }
    </script>
    <script type="text/javascript">
        $(".createNew").on('click', function (e) {
            e.preventDefault();
            var IDD = $("#district").val();          
            if (IDD == 0){
                alert("Please select District!");
            }
            else {
                $.ajax({
                    url: '/uhslocations/CreateDistrictPre',
                    type: "GET",
                    dataType: "JSON",
                    data: { IDD: IDD, Int1: @ViewBag.btnSel },
                    success: function (ddID) {  
                         if (ddID == 1) {
                             window.location = "/uhslocations/CreateDistrict?IDD=" + IDD + "&dctp=1&Int1=" + '@ViewBag.btnSel';
                         } else if (ddID == 2) {
                             alert("This District is currently being edited by another User. Please try again in 5 minutes!");
                         }   
                    }
                });
            }
        });
    </script>

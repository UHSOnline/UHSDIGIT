
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>loginDate</title>
    <link rel="stylesheet" type="text/css" href="~/dist/style/loadme.css">
    <style>
        .loadDiv {
            display: block;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background-color: black;
            opacity: 0.5;
            z-index: 6000;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="loadimage">
        <div class="loadmeRect">
            <div class="loadmeRectChild loadmeRect1"></div>
            <div class="loadmeRectChild loadmeRect2"></div>
            <div class="loadmeRectChild loadmeRect3"></div>
            <div class="loadmeRectChild loadmeRect4"></div>
            <div class="loadmeRectChild loadmeRect5"></div>
        </div>
        @*<div class="loadme-mask"></div>*@
    </div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <!-- jquery
        ============================================ -->
    <script src="~/main/js/vendor/jquery-1.12.4.min.js"></script>
    <script type="text/javascript">
        $(window).on('load', function (e) {
            $("head").addClass("loadDiv");
            $('.loadimage').show();
            var tzoffset = (new Date()).getTimezoneOffset() * 60000;
            var dt = (new Date(Date.now() - tzoffset));
            var bt = dt.toISOString(); // ISO "2013-12-08T17:55:38.130Z"
            $.ajax({
                url: '/uhsCH/UserLogin',
                type: "GET",
                dataType: "JSON",
                data: { a: bt, b: 1 },
                success: function (data) {
                    if (data == 1) {
                        window.location = "/uhsCH/Home?projectID=1&taskOrderID=1&Int1=1";
                    } 
                }
            });
        });

    </script>
</body>
</html>
